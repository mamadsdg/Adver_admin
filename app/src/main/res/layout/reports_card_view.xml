<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/background3"
        android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="52dp"
            android:layout_height="51dp"
            android:src="@drawable/person"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_report"
            android:text="محمد صدیقی حیدر ابادی"
            android:textSize="20sp"
            android:textColor="@color/red1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/vazir"
            android:layout_toLeftOf="@id/profile_image"/>
        <TextView
            android:id="@+id/date_inf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99/9/12"
            android:gravity="right"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@id/name_report"
            android:layout_toLeftOf="@id/profile_image"
            android:layout_marginRight="@dimen/_5sdp"
            android:textColor="@color/color1"
            />
        <TextView
            android:id="@+id/preview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_inf"
            android:text="این یک نمونه از گزارش است که در اینده ای نزدیک ساخته خواهد شد"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_8sdp" />



    </RelativeLayout>

</FrameLayout>